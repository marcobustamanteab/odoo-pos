<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

     <t t-name="ClientLine" t-inherit="point_of_sale.ClientLine" t-inherit-mode="extension" owl="1">
        <xpath expr="//tr" position="inside">
            <td>
                <t t-if="props.partner.is_company">
                    <input type="checkbox" name="is_company" disabled="true" checked="true" class="input-is-company"/>
                </t>
                <t t-else="">
                    <input type="checkbox" name="is_company" disabled="true" class="input-is-company"/>
                </t>
            </td>
        </xpath>
    </t>

    <t t-name="ClientListScreen" t-inherit="point_of_sale.ClientListScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//tr" position="inside">
            <th>Es Empresa</th>
        </xpath>
    </t>

   <t t-name="ClientDetailsEdit" t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//input[@name=('name')]" position="after">
            <div class="client-detail">
                <span class="label">Individual</span>
                <t t-if="props.partner.is_company">
                    <input type="radio" name="is_company" value="false" t-on-change="captureChange"
                           t-on-click="trigger('person-type-validate', { isCompany: false })"/>
                    <span class="label">Empresa</span>
                    <input type="radio" name="is_company" checked="true" t-on-click="trigger('company-type-validate', { isCompany: true })"/>
                </t>
                <t t-else="!props.partner.is_company">
                    <input type="radio" name="is_company" checked="true"
                        t-on-click="trigger('person-type-validate', { isCompany: true })"/>
                    <span class="label">Empresa</span>
                    <input type="radio" name="is_company" value="true" t-on-change="captureChange"
                           t-on-click="trigger('company-type-validate', { isCompany: false })"/>
                </t>
            </div>
        </xpath>
    </t>

   <t t-name="ClientDetailsEdit" t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('client-details-left')]" position="inside">
            <div class="client-detail" t-if="props.partner.is_company">
                <span class="label">Tipo de Contribuyente</span>
                <select class="detail client-address-states needsclick" name="l10n_cl_sii_taxpayer_type"
                        t-on-change="captureChange">
                  <option value="">Tipo de Contribuyente</option>
                  <option value="1">IVA afecto 1ª categoría</option>
                  <option value="2">Emisor de boleta 2da categoría</option>
                  <option value="3">Consumidor final</option>
                  <option value="4">Extranjero</option>
                </select>
            </div>
            <div class="client-detail" t-if="props.partner.is_company">
                <span class="label">Giro</span>
                <input class="detail client-address-street" name="l10n_cl_activity_description"
                                               t-on-change="captureChange" t-att-value="props.partner.l10n_cl_activity_description || ''"
                                               placeholder="Giro" />
            </div>
        </xpath>
    </t>

   <t t-name="ClientDetailsEdit" t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('client-details-right')]" position="inside">
            <div class="client-detail">
                <span class="label">Edad</span>
                <input class="detail client-address-street" name="age"
                               t-on-change="captureChange" t-att-value="props.partner.age || ''"
                               placeholder="Edad" />
            </div>
            <div class="client-detail">
                <span class="label">Categoría</span>
                <input class="detail client-address-street" name="category"
                               t-on-change="captureChange" t-att-value="props.partner.category || ''"
                               placeholder="Categoria" />
            </div>
            <div class="client-detail">
                <span class="label">Fecha de Nacimiento</span>
                <input type="date" name="dob" t-on-change="captureChange" t-att-value="props.partner.dob || ''"/>
            </div>
        </xpath>
    </t>

    <t t-name="ClientListScreen" t-inherit="point_of_sale.ClientListScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('searchbox-client')]" position="before">
            <div t-on-click="trigger('click-refresh')" class="button next" t-if="!state.detailIsShown">
                    <i class="fa fa-refresh"/>
                    <span> <t t-esc="refreshButton.text" /></span>
            </div>
        </xpath>
    </t>

</templates>
