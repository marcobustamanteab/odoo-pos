<odoo noupdate="0">

    <record model="ir.ui.view" id="view_account_move_form_lvdet">
        <field name="name">Libro de Ventas CCU Synchronization Audit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="ccu_base.account_move_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='ccu_customization']" position="inside">
                <group>
                    <notebook>
                        <page name="page_lvdet_general" string="Datos General">
                            <group name="lvdet_general" string="LVDET Connector">
                                <field name="lvdet_sync"/>
                                <field name="lvdet_sync_date"/>
                                <field name="lvdet_sync_confirmado"/>
                                <field name="lvdet_sync_confirmado_date"/>
                            </group>
                        </page>
                        <page name="page_lvdet_response" string="Consistency">
                            <group>
                                <field name="lvdet_message"/>
                                <field name="lvdet_payload_request"/>
                                <field name="lvdet_payload_response"/>
                            </group>
                        </page>
                    </notebook>
                </group>
            </xpath>
        </field>
    </record>

      <record model="ir.ui.view" id="ccu_view_account_move_send_lvdet_form">
        <field name="name">account.move to Libro de Ventas</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <header>
                <button name="button_lvdet_sync_registry"
                        type="object"
                        string="Send move to LibroVenta"
                        confirm="Are you sure?"
                        class="oe_highlight"/>
                <button name="delete_registry"
                        type="object"
                        string="Delete move ins LibroVenta"
                        confirm="Are you sure?"
                        class="oe_highlight"/>
                 <!-- <button name="lvdet_sync_registry"
                        type="object"
                        string="Send move to LibroVenta"
                        confirm="Are you sure?"
                        class="oe_highlight"/>                        -->
            </header>
        </field>
    </record>

</odoo>