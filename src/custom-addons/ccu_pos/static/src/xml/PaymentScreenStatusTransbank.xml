<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

   <t t-name="PaymentScreenStatusTransbank" t-inherit="point_of_sale.PaymentScreenStatus" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('payment-status-total-due')]" position="after">
            <t t-if="getTransactionName().includes('Transbank')">
               <div class="payment-status-total-due">
                    <span class="label">Transbank ID : </span>
                    <span>
                        <t t-esc="getTransactionId()" />
                    </span>
                </div>
            </t>
        </xpath>
    </t>

</templates>