<odoo>
    <record model="ir.ui.view" id="ccu_account_account_move_form_view">
        <field name="name">CCU Account Move</field>
        <field name="model">account.move</field>
        <field name="priority">17</field>
        <field name="inherit_id" ref="ccu_base.account_move_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='ccu_customization']" position="inside">
                <group name="group_account" string="Account">
                    <field name="refund_type"/>
                </group>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="ccu_account_account_move_invoice_reference">
        <field name="name">CCU Account Move Invoice Reference</field>
        <field name="model">account.move</field>
        <field name="priority">17</field>
        <field name="inherit_id" ref="l10n_cl_edi.view_invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='cross_reference_docs']" position="inside">
                <button name="add_invoice_reference" string="Add invoice reference" type="object" class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>