<odoo>
    <record id="account_move_invoice_reference" model="ir.ui.view">
        <field name="name">account.move.invoice.reference</field>
        <field name="model">account.move.invoice.reference</field>
        <field name="arch" type="xml">
            <form string="Invoice Reference">
                <group class="oe_title">
                    <field name="move_id" readonly="1"/>
                    <field name="origin_doc_number"/>
                    <field name="l10n_cl_reference_doc_type_selection"/>
                    <field name="reason"/>
                    <field name="date"/>
                </group>
                <footer>
                    <button name="add_invoice_reference" string="Add invoice reference" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
        <record id="account_move_invoice_reference_delete" model="ir.ui.view">
        <field name="name">account.move.invoice.reference.delete</field>
        <field name="model">account.move.invoice.reference.delete</field>
        <field name="arch" type="xml">
            <form string="Invoice Reference Delete">
                <group class="oe_title">
                     <field name="move_id"/>
                </group>
                <footer>
                    <button name="delete_invoice_reference" string="Delete invoice reference" type="object" class="btn-danger" icon="fa-trash-o" confirm="Are you sure you want to delete this invoice? "/>
                </footer>
            </form>
        </field>
    </record>
</odoo>