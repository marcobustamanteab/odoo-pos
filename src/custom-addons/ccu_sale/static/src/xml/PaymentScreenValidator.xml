<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

   <t t-name="PaymentScreenValidator" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('button next')]" position="replace">
            <t t-if="getTransactionName().includes('Transbank')">
                <div class="button next" t-att-class="{ highlight: currentOrder.is_paid() }"
                      t-on-click="validateOrderTransbank(false)">
                    <span class="next_text">Validate</span>
                    <i class="fa fa-angle-double-right fa-fw"></i>
                </div>
            </t>
        </xpath>
    </t>

</templates>