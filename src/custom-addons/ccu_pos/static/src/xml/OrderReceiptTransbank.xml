<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

   <t t-name="OrderReceiptTransbank" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('after-footer')]" position="before">
            <t t-if="getTransactionName().includes('Transbank')">
                <div>Transbank ID : <t t-esc="getTransactionId()" /></div>
            </t>
        </xpath>
    </t>

</templates>
