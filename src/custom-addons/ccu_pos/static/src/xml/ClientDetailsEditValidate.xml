<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

     <t t-name="ClientLine" t-inherit="point_of_sale.ClientLine" t-inherit-mode="extension" owl="1">
        <xpath expr="//tr" position="inside">
            <td>
                <t t-if="props.partner.is_company">
                    <input type="checkbox" name="is_company" disabled="true" checked="true"/>
                </t>
                <t t-else="">
                    <input type="checkbox" name="is_company" disabled="true"/>
                </t>
            </td>
        </xpath>
    </t>

    <t t-name="ClientListScreen" t-inherit="point_of_sale.ClientListScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//tr" position="inside">
            <th>Es Empresa</th>
        </xpath>
    </t>

   <t t-name="ClientDetailsEdit" t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//input[@name=('name')]" position="after">
            <div class="client-detail">
                <span class="label">Individual</span>
                <t t-if="isCompany">
                    <input type="radio" name="company_condition" value="person"
                        t-on-change="type-customer-validate">Individual</input>
                    <span class="label">Empresa</span>
                    <input type="radio" name="company_condition" checked="true" value="company"
                        t-on-change="type-customer-validate">Empresa</input>
                </t>
                <t t-else="">
                    <input type="radio" name="company_condition" checked="true"
                        t-on-change="type-customer-validate">Individual</input>
                    <span class="label">Empresa</span>
                    <input type="radio" name="company_condition"
                        t-on-change="type-customer-validate">Empresa</input>
                </t>
            </div>
        </xpath>
    </t>

   <t t-name="ClientDetailsEdit" t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('client-details-left')]" position="inside">
            <div class="client-detail" t-if="isCompany">
                <span class="label">Tipo de Contribuyente</span>
                <select class="detail client-address-states needsclick" name="state_id"
                        t-on-change="captureChange">
                    <option value="">None</option>
                    <t t-foreach="env.pos.states" t-as="state" t-key="state.id">
                        <option t-if="props.partner.country_id[0] == state.country_id[0]"
                                t-att-value="state.id"
                                t-att-selected="props.partner.state_id ? ((state.id === props.partner.state_id[0]) ? true : undefined) : undefined">
                            <t t-esc="state.name" />
                        </option>
                    </t>
                </select>
            </div>
            <div class="client-detail" t-if="isCompany">
                <span class="label">Giro</span>
                <input class="detail client-address-street" name="street"
                                               t-on-change="captureChange" t-att-value="props.partner.l10n_cl_activity_description || ''"
                                               placeholder="Giro" />
            </div>
        </xpath>
    </t>

   <t t-name="ClientDetailsEdit" t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('client-details-right')]" position="inside">
            <div class="client-detail">
                <span class="label">Edad</span>
                <input class="detail client-address-street" name="street"
                               t-on-change="captureChange" t-att-value="props.partner.age || ''"
                               placeholder="Edad" />
            </div>
            <div class="client-detail">
                <span class="label">Categor√≠a</span>
                <input class="detail client-address-street" name="street"
                               t-on-change="captureChange" t-att-value="props.partner.category || ''"
                               placeholder="Categoria" />
            </div>
            <div class="client-detail">
                <span class="label">Fecha de Nacimiento</span>
                <input type="date" t-att-value="props.partner.dob || ''"/>
            </div>
        </xpath>
    </t>

    <t t-name="ClientListScreen" t-inherit="point_of_sale.ClientListScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('searchbox-client')]" position="before">
            <div t-on-click="clickRefresh" class="button next" t-if="!state.detailIsShown">
                    <i class="fa fa-refresh"/>
                    <span> <t t-esc="refreshButton.text" /></span>
            </div>
        </xpath>
    </t>

</templates>
