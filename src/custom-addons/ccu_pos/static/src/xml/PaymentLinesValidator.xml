<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

   <t t-name="PaymentLinesValidator" t-inherit="point_of_sale.PaymentScreenPaymentLines" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('delete-button')]" position="after">
            <t t-if="transactionNameVal.includes('Transbank')">
<!--                <t t-if="env.pos.get_order().is_paid() and transactionId === ''">-->
                <t t-if="transactionId != ''">
                    <div class="save-button"
                        t-on-click="trigger('del-transbank-line', { cid: line.cid })"
                        aria-label="Borrar" title="Borrar">
                        <i class="fa fa-eraser"/>
                    </div>
                </t>
                <t t-else="transactionId === ''">
                    <div class="save-button"
                        t-on-click="trigger('edit-transbank-line', { cid: line.cid })"
                        aria-label="Editar" title="Editar" disabled="true" >
                        <i class="fa fa-pencil"/>
                    </div>
                </t>
            </t>
        </xpath>

    </t>

</templates>