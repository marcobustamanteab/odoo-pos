version: '3'
services:
  {{ service_name }}:
    image: odoo-pos
    #DANGEROUS
    user: root
    ports:
      - 8069:8069
      {%- if debug %}
      - 8888:3001
      {%- endif %}      
    build:
      context: .
      dockerfile: Dockerfile
      {%- if mode == 'update' %}      
      command: -u ${MODULE} -d MASTER --test-enable --stop-after-init
      {%- elif mode == 'install' %}
      command: -i ${MODULE} -d MASTER --test-enable --stop-after-init
      {%- endif %} 
    networks:
      - frontend
      - backend

    {% if debug -%}
    entrypoint: ['/entrypoint.sh', 'odoo', 'dev']
    {%- else -%}
    entrypoint: ['/entrypoint.sh', 'odoo']
    {%- endif %}      
    volumes:
      - ./config:/etc/odoo
      - ./enterprise:/mnt/enterprise
      - ./src/custom-addons:/mnt/extra-addons/custom-addons
      - ./src/l10n-chile:/mnt/extra-addons/l10n-chile


networks:
  frontend:
      name: frontend

  backend:
    external:
      name: backend
