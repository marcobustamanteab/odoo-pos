<odoo>
    <record id="view_account_journal_esb_form" model="ir.ui.view">
        <field name="name">account.journal.esb.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="ccu_base.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='ccu_customization']" position="inside">
                <group name="group_esb" string="ESB Connector">
                    <field name="ccu_code"/>
                    <field name="ccu_sync"/>
                    <field name="default_latam_document_type_id"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
