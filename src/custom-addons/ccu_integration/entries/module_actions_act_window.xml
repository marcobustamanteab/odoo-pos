<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        <!-- INTEGRATION SETTINGS -->
        <record model="ir.actions.act_window" id="integration_settings_action">
            <field name="binding_type">action</field>
            <field name="context">{}</field>
            <field eval="[(6, 0, [])]" name="groups_id"/>
            <field name="help"><![CDATA[Integration Settings]]></field>
            <field name="limit">80</field>
            <field name="name">Integration Settings</field>
            <field name="res_model">integration.settings</field>
            <field name="target">current</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>
