version: '3'
services:
  {{ odoo.service_name }}:
    image: wso2qa4.ccu.cl:5000/odoo:ccu_pos-$SHA
    container_name: {{ odoo.container_name }}
    user: root
    ports:
      - 8069:8069
      {%- if debug %}
      - 8888:3001
      {%- endif %}
    networks:
      - frontend
      - backend
    entrypoint: ['/entrypoint.sh', 'odoo']  

networks:
  frontend:
      name: frontend

  backend:
    external:
      name: backend
